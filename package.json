{
  "name": "react-typescript-hrm-starter",
  "version": "1.0.0",
  "description": "A minimal boilerplate with typescript for react with hot module replacement",
  "main": "./src/index.tsx",
  "scripts": {
    "start": "webpack-dev-server --config=webpack.dev.js",
    "build": "yarn run clean-dist && webpack -p --config=webpack.prod.js",
    "clean-dist": "rm -f -r -d dist",
    "start-prod": "yarn run build && node express.js"
  },
  "author": "bernardo de stefano",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:bernardodestefano/react-typescript-starter.git"
  },
  "bugs": {
    "url": "https://github.com/bernardodestefano/react-typescript-starter/issues"
  },
  "homepage": "https://github.com/bernardodestefano/react-typescript-starter#readme",
  "keywords": [
    "frontend",
    "webpack",
    "boilerplate",
    "typescript",
    "react",
    "babel",
    "sass",
    "hmr"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "express": "^4.16.4",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "source-map-loader": "^0.2.4",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.4",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "babel-plugin-module-resolver": "^3.1.2",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "node-sass": "^4.9.4",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
